<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewProject">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="25dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:backgroundTint="@color/toolbar_color"
            android:id="@+id/toolbar"
            app:titleTextColor="@color/white"
            android:layout_width="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <EditText
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/custom_input"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/tomato"
                    android:background="#ffffff"
                    android:text="Name" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:onClick="onChooseColor">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_outline_color_lens_24"
                    tools:ignore="VectorDrawableCompat"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="25dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Color"
                        android:textSize="17dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/color_project"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No color"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:onClick="onChooseCollaborators">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_outline_group_add_24"
                    tools:ignore="VectorDrawableCompat"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="25dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Collaborators"
                        android:textSize="17dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/no_collaborator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 collaborators"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list_collaborators"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>