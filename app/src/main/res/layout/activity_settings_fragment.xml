<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragment.SettingsFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/account_settings"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:drawableTop="@drawable/ic_baseline_person_outline_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Account"
                android:textStyle="bold|italic"
                android:textColor="@color/tomato"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/color_theme_settings"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:drawableTop="@drawable/ic_outline_color_lens_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Color Theme"
                android:textStyle="bold|italic"
                android:textColor="@color/tomato"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/infomation_settings"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:drawableTop="@drawable/ic_baseline_info_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Infomation"
                android:textStyle="bold|italic"
                android:textColor="@color/tomato"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/support_settings"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:drawableTop="@drawable/ic_baseline_support_agent_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Support"
                android:textStyle="bold|italic"
                android:textColor="@color/tomato"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>